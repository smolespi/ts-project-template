{
  "private": "true",
  "name": "@sysdotini/ts-project-template",
  "version": "0.0.1",
  "description": "Project description",
  "author": "sysdotini <espi@riseup.net> (https://espi.me)",
  "contributors": [],
  "license": "MIT",
  "homepage": "https://github.com/sysdotini/ts-project-template",
  "main": "dist/index.js",
  "bugs": {
    "url": "https://github.com/sysdotini/ts-project-template/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sysdotini/ts-project-template.git"
  },
  "engines": {
    "npm": ">=6.9.0",
    "node": ">=14.0.0"
  },
  "eslintIgnore": [
    "dist",
    "node_modules",
    "rethinkdb_data"
  ],
  "eslintConfig": {
    "extends": "@sysdotini/eslint-config"
  },
  "nodemonConfig": {
    "delay": 5000,
    "ignore": [
      ".git",
      "./node_modules/",
      "./dist/"
    ],
    "watch": [
      "src"
    ],
    "exec": "cross-env NODE_ENV=development ts-node --files ./src/index.ts",
    "ext": "ts"
  },
  "prettier": {
    "arrowParens": "always",
    "endOfLine": "lf",
    "proseWrap": "preserve",
    "quoteProps": "consistent",
    "trailingComma": "all",
    "printWidth": 120,
    "tabWidth": 2,
    "semi": true,
    "singleQuote": false,
    "useTabs": false
  },
  "scripts": {
    "build": "tsc",
    "dev": "cross-env concurrently \"cross-env nodemon\"",
    "format": "cross-env prettier --config .prettierrc 'src/**/*.{css,liquid,js,json,sass,scss,ts,tsx}' --write",
    "lint": "eslint --fix .",
    "prebuild": "cross-env rimraf ./dist/",
    "prepublishOnly": "npm run test && npm run build",
    "start": "npm run build && cross-env NODE_ENV=production node dist/index.js",
    "test": "tsc && eslint ."
  },
  "dependencies": {},
  "devDependencies": {
    "@sysdotini/eslint-config": "^1.0.2",
    "@types/node": "^15.3.0",
    "@typescript-eslint/eslint-plugin": "^4.24.0",
    "@typescript-eslint/parser": "^4.24.0",
    "concurrently": "^6.1.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.3.0",
    "rimraf": "^3.0.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  }
}
